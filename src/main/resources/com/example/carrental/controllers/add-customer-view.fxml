        <font>
            <Font name="System Bold" size="26.0" />
        </font>
    </Button>
    <TextField fx:id="customerNameField" layoutX="262.0" layoutY="182.0" onMouseEntered="#nameFieldToolTipShow" onMouseExited="#nameFieldToolTipHide" prefHeight="55.0" prefWidth="855.0" promptText="Customer Name" styleClass="input-field" />
    <TextField fx:id="customerIdField" layoutX="262.0" layoutY="257.0" onMouseEntered="#idFieldToolTipShow" onMouseExited="#idFieldToolTipHide" prefHeight="55.0" prefWidth="855.0" promptText="Customer National ID" styleClass="input-field" />
