<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="798.0" prefWidth="930.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrental.controllers.RentController">
    <AnchorPane layoutX="-1.0" layoutY="-5.0" prefHeight="798.0" prefWidth="930.0">
        <ComboBox fx:id="customerComboBox" layoutX="311.0" layoutY="228.0" prefHeight="48.0" prefWidth="420.0" promptText="Rent To" styleClass="dropdown" />
        <ComboBox fx:id="vehicleComboBox" layoutX="311.0" layoutY="332.0" prefHeight="48.0" prefWidth="420.0" promptText="No vehicle choosen" onAction="#setPicture" styleClass="dropdown" />
        <DatePicker fx:id="endDatePicker" layoutX="311.0" layoutY="436.0" prefHeight="48.0" prefWidth="420.0" promptText="Choose Return Date" styleClass="dropdown" />
        <ImageView fx:id="vehicleImage" fitHeight="142.0" fitWidth="236.0" layoutX="521.0" layoutY="34.0" pickOnBounds="true" preserveRatio="true" styleClass="vehicle-image">
            <Image url="@../icons/car.png" />
        </ImageView>
        <Label layoutX="311.0" layoutY="198.0" text="Rent To:">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="312.0" layoutY="294.0" text="Select a Vehicle:">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="313.0" layoutY="406.0" text="Return Date">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Button contentDisplay="RIGHT" layoutX="400.0" layoutY="527.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="436.0" onAction="#saveBtn" styleClass="save-btn" text="Rent">
            <graphic>
                <ImageView>
                    <Image url="@../icons/save.png"/>
                </ImageView>
            </graphic>
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Button>
    </AnchorPane>
</AnchorPane>
